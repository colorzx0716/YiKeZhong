<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70">

        <LinearLayout
            android:id="@+id/fg1_lt1"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fg1_remen"
                android:textColor="#000000"
                android:text="热门"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/fg1_v_remen"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x15"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg1_lt2"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fg1_guanzhu"
                android:text="关注"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/fg1_v_guanzhu"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/x15"/>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fg1_fl"
        android:background="#009988"
        android:layout_marginTop="@dimen/x70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>



</RelativeLayout>