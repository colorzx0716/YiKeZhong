<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bawie.yikezhong.activity.DuanZiActivity">


    <RelativeLayout
        android:background="#33ccff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120">

        <TextView
            android:id="@+id/dz_back"
            android:textColor="#ffffff"
            android:text="取消"
            android:gravity="center"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y120" />

        <TextView
            android:textColor="#ffffff"
            android:text="发表文章"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120" />

        <TextView
            android:id="@+id/dz_tv_fabiao"
            android:textColor="#ffffff"
            android:text="发表"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y120" />

    </RelativeLayout>

    <EditText
        android:lines="5"
        android:id="@+id/dz_et_content"
        android:layout_marginTop="@dimen/x120"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/dz_iv_jia"
        android:layout_marginTop="@dimen/y500"
        android:src="@drawable/raw_1500020546"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y100" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dz_rv"
        android:layout_marginTop="@dimen/y650"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</RelativeLayout>
