<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityStyle</item>

    </style>

    <style name="ActivityStyle">
        <item name="android:activityOpenEnterAnimation">@anim/top_to_bottom_in</item>//A--B  A
        <item name="android:activityOpenExitAnimation">@anim/top_to_bottom_out</item>//A--B   B
        <item name="android:activityCloseEnterAnimation">@anim/bottom_to_top_in</item>//B--A  B
        <item name="android:activityCloseExitAnimation">@anim/bottom_to_top_out</item>//B--A  A

    </style>


</resources>
